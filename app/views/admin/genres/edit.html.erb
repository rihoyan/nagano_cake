<div class="container">

  <div class="row">
    <% flash.each do |key, value| %>
      <p class="alert alert-<%= key %>">
    <%= value %>
      </p>
    <% end %>
  </div>

  <h3 class="row mt-3">ジャンル編集</h3>

    <%= form_with model: @genre , url: admin_genre_path(@genre), local: true do |f| %>
    <div class="form_group row my-5 ">
      <%= f.label :ジャンル名 ,class: "col-lg-2" %>
      <%= f.text_field :name ,class: "col-lg-3 form-control mr-3" %>
      <%= f.submit "変更を保存", class: "col-lg-2 btn btn-success" %>
    </div>
    <% end %>
</div>
