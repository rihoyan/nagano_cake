<div class="container">

  <div class="row">
    <% flash.each do |key, value| %>
      <p class="alert alert-<%= key %>">
    <%= value %>
      </p>
    <% end %>
  </div>

    <h3 class="row mt-3">ジャンル一覧・追加</h3>
    <%= form_with model: @genre ,url: admin_genres_path, local: true do |f| %>
    <div class="form_group row my-5">
      <%= f.label :ジャンル名 ,class: "col-lg-2"%>
      <%= f.text_field :name ,placeholder: "ジャンル名",class: "col-lg-5 mr-3 form-control" %>
      <%= f.submit "新規登録" ,class: "col-lg-2 btn btn-success" %>
      <% end %>
    </div>

  <div class="row">
    <table class="table">
      <tr>
        <th>ジャンル</th>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
