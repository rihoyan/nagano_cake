<div class="container">
  <div class="row my-2">
    <h3><% @customer.fullname %>さんの会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col">
      <% form_with model: @customer,url: admin_customer_path(@customer) ,local: true do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= f.radio_button :is_active,"true", checked: true %>有効 <%= f.radio_button :is_active,"false" %>退会</td>
        </tr>
      </table>
      <%= f.submit "変更を保存",class: "btn btn-success" %>
    </div>
</div>