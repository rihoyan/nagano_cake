<div class="container">
  <div class="row my-2">
    <h3>注文履歴詳細</h3>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <th>購入者</th>
        <td><%= link_to '@order.customer.name', admin_customer_path(@order)  %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><%= %></td>
        <td><%= link_to "更新", admin_order_path, class: "btn btn-success" %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="col-lg-10">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <%= order.order_item.item.name %>
          <%= order.order_item.price %>
          <%= order.order_item.amount %>
          <%= order.order_item.subtotal %>
          <%=%>
        <% end %>
        <%= link_to "更新", admin_order_ite_path, class: "btn-btn-success" %>
        </tr>

      </table>
    </div>
    <div class="col-lg-2">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.subtotal.sum %> </td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
