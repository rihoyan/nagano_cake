<div class="container">
  <h3 class="row w-25 mt-3">注文履歴一覧</h3>
  <table class="table mt-3">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.fullname %></td>
      <td><%= order.order_item.amount %></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>
