<div class="container">

  <div class="row">
    <% flash.each do |key, value| %>
      <p class="alert alert-<%= key %>">
    <%= value %>
      </p>
    <% end %>
  </div>

  <h3 class="row w-25 mt-3">注文履歴一覧</h3>
  <table class="table mt-3">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to admin_order_path(order) do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
      </td>
      <td><%= order.customer.fullname %></td>
      <td><%= order.order_items.count  %></td>
      <td></td>
    </tr>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>
