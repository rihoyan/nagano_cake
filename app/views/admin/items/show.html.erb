<div class="container">

  <div class="row">
    <% flash.each do |key, value| %>
      <p class="alert alert-<%= key %>">
    <%= value %>
      </p>
    <% end %>
  </div>

  <h3 class="row mt-3">商品詳細</h3>

  <div class ="row">
    <div class="col">
      <%= attachment_image_tag @item,:image,:fill,200,200,fallback: "no_image.jpg" %>
    </div>

    <div class="col">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br/>(税抜価格)</th>
          <td><%= (@item.taxprice).to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td></td>
        </tr>
      </table>
      <%= link_to "編集する",edit_admin_item_path(@item) ,class: "btn btn-success"%>
    </div>
  </div>
</div>
