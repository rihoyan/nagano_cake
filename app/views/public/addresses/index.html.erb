<div class="container">
  <div class="row my-4">
    <h3>配送先登録/一覧</h3>
  </div>

  <%= form_with model: @address,local: true do |f| %>
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号ハイフンなし", class: "col-lg-2" %>
    <%= f.text_field :postal_code ,placeholder: "000000",class: "form-control col-lg-5" %>
  </div>
  <div class="form-group row">
    <%= f.label :addresses, "住所",class: "col-lg-2" %>
    <%= f.text_field :addresses,placeholder: "東京都渋谷区代々木神園町０−０", class: "form-control col-lg-7" %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "宛名",class: "col-lg-2" %>
    <%= f.text_field :name,placeholder: "令和道子", class: "form-control col-lg-5" %>
    <%= f.submit "新規登録",class: "btn btn-success ml-5" %>
  </div>
  <% end %>

  <table class="table">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.addresses %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する",edit_address_path(address), class: "btn btn-success" %>
          <%= link_to "削除する",address_path(address), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>

