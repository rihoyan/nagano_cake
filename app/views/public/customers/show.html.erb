<div class="container">
  <div class="row mt-3">
    <h3>マイページ</h3>
  </div>

  <div class="row mt-3">
    <div class="col-lg-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-lg-4 mb-3">
      <%= link_to "編集する",edit_customers_path ,class: "btn btn-success" %>
    </div>
  </div>

  <table class="table table-bordered">
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email%></td>
    </tr>
  </table>

  <div class="row ">
    <h4 class="col-lg-2">配送先</h4>
    <%= link_to "一覧を見る", '',class: "col-lg-2 btn btn-primary" %>
  </div>
  <div class="row mt-3">
    <h4 class="col-lg-2">注文履歴</h4>
    <%= link_to "一覧を見る", "",class: "col-lg-2 btn btn-primary" %>
  </div>

</div>