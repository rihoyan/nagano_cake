<div class="container">
  <div class="row my-4">
    <h3>注文履歴詳細</h3>
  </div>

  <div class="row">
    <div class="col">
      <h5>注文情報</h5>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td></td>
        </tr>
      </table>
    </div>

    <div class="col">
      <h5>請求情報</h5>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @sum.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= (@order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= (@order.total_payment).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h5>注文内容</h5>
    <table class="table">
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
       <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= (order_item.price).to_s(:delimited) %></td>
        <td><%= order_item.amount %></td>
        <td><%= (order_item.sub_total).to_s(:delimited) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>