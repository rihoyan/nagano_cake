<div class="container">
  <div class="row my-4">
    <h3>商品一覧</h3><h5 class="align-self-end font-weight-normal">(全<%= @item %>件)</h5>
  </div>
  <div class="d-flex flex-row row">
    <% @items.each do |item| %>
      <div class="col flex-wrap mb-2">
      <%=link_to item_path(item) do %>
        <%= attachment_image_tag item,:image,:fill,200,200,fallback: "no-image.jpg" %>
      <% end %></br>
      <%= item.name %></br>
      <p>¥<%= item.taxprice.to_s(:delimited) %></p>
      </div>
    <% end %>
  </div>
  <div class="pagination justify-content-center">
    <%= paginate @items %>
  </div>
</div>