<div class="container">
  
  

  <div class ="row mt-3">
    <div class="col">
      <%= attachment_image_tag @item,:image,:fill,300,300,fallback: "no_image.jpg" %>
    </div>
    <div class="col">
      <h3><%= @item.name %></h3>
      <p><%= @item.introduction %></p>
      <h4>￥<%= @item.taxprice.to_s(:delimited) %>(税込)</h4></br>
      <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
      <%= f.hidden_field :item_id, value: params[:id] %>
      <div class="d-flex">
        <%= f.select :amount,[[1,1],[2,2],[3,3]], prompt: "個数選択" %>
        <%= f.submit "カートに入れる",class: "btn btn-success ml-4" %>
      <% end %>
      </div>
    </div>
  </div>
</div>