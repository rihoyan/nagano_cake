<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/442d465ed4.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark navbar-fixed-top navbar-expand-lg">
      <div class="navbar-header">
        <%= link_to root_path do %>
          <i class="navbar-brand fas fa-birthday-cake">ながのCAKE</i>
        <% end %>
      </div>

      <% if admin_signed_in? %>
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "商品一覧", admin_items_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "会員一覧", admin_customers_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "注文履歴一覧", admin_top_path ,class: "btn btn-outline-secondary mr-4" %></li>
        <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path ,class: "btn btn-outline-secondary mr-4" %></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete ,class: "btn btn-outline-secondary mr-4"%></li>
         <form class="navbar-form navbar-right" role="search">
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
          </div>
        </form>
      </ul>
      <% else %>
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item" ><%= link_to "About" , about_path, class: "btn btn-outline-secondary mr-4" %></li>
        <li class="nav-item"><%= link_to "商品一覧",items_path, class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "新規登録",new_customer_registration_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "ログイン",new_admin_session_path, class: "btn btn-outline-secondary mr-4"%></li>
      </ul>
      <% end %>
    </nav>

    <%= yield %>

  </body>
</html>