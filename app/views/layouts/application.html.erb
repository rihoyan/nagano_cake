<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/442d465ed4.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark navbar-fixed-top navbar-expand-lg">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">LOGO</a>
      </div>
      <% if customer_signed_in? %>
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "マイページ", customers_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "商品一覧", items_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "カート", cart_items_path ,class: "btn btn-outline-secondary mr-4" %></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete ,class: "btn btn-outline-secondary mr-4"%></li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item" ><%= link_to "About" , about_path, class: "btn btn-outline-secondary mr-4" %></li>
        <li class="nav-item"><%= link_to "商品一覧",items_path, class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "新規登録",new_customer_registration_path ,class: "btn btn-outline-secondary mr-4"%></li>
        <li class="nav-item"><%= link_to "ログイン",new_customer_session_path, class: "btn btn-outline-secondary mr-4"%></li>
      </ul>
      <% end %>
    </nav>

    <%= yield %>

  </body>
</html>
